{
    "ID": "Info",
    "layout": {
        "widget": "page",
        "children": [
            {
                "widget": "container",
                "layout": "vertical",
                "text": "User Information",
                "children": [
                    {
                        "widget": "display",
                        "display": "{\"user\": user}",
                        "icons": {
                            "user": "account_circle"
                        }
                    },
                    {
                        "widget": "display",
                        "display": "{\"email\": email}",
                        "icons": {
                            "email": "email"
                        }
                    },
                    {
                        "widget": "display",
                        "display": "{\"roles\": $djRoles()}",
                        "icons": {
                            "roles": "person_search"
                        }
                    },
                    {
                        "widget": "text",
                        "text": "System Roles",
                        "href": "/table/config/dj-role",
                        "icon": "people_outline"
                    },
                    {
                        "widget": "container",
                        "children": [
                            {
                                "widget": "text",
                                "text": "Tenant Users",
                                "href": "/table/config/tenantusers",
                                "icon": "people"
                            }
                        ],
                        "if": "$contains(href, \".my.dashjoin.\")"
                    }
                ],
                "title": "User Information"
            },
            {
                "widget": "display",
                "display": "( $f:=function($x){ $merge( [$x, {\"Third party licenses\": \"https://download.dashjoin.com/dashjoin/release/\" & $substringBefore($x.version, '-') & \"/license-report.html\"}]) }; $f($djVersion()) )",
                "title": "Software",
                "icons": {
                    "version": "content_copy",
                    "vendor": "store",
                    "name": "check_circle_outline",
                    "buildTime": "access_time",
                    "runtime": "build",
                    "Third party licenses": "copyright",
                    "title": "title"
                }
            },
            {
                "widget": "table",
                "expression": "$djGetDatabases()",
                "title": "Database Drivers"
            },
            {
                "widget": "table",
                "expression": "$djGetDrivers()",
                "title": "JDBC Drivers"
            },
            {
                "widget": "table",
                "expression": "$djGetFunctions()",
                "title": "Functions"
            }
        ],
        "pageLayout": "2 column"
    }
}