{
  "ID": "Info",
  "layout": {
    "widget": "page",
    "children": [
      {
        "widget": "container",
        "layout": "vertical",
        "text": "User Information",
        "children": [
          {
            "widget": "display",
            "display": "{\"user\": user}"
          },
          {
            "widget": "display",
            "display": "{\"email\": email}"
          },
          {
            "widget": "display",
            "display": "{\"roles\": $djRoles()}"
          },
          {
            "widget": "text",
            "text": "System Roles",
            "href": "/table/config/dj-role",
            "icon": "people_outline"
          },
          {
            "widget": "container",
            "children": [
              {
                "widget": "text",
                "text": "Tenant Users",
                "href": "/table/config/tenantusers",
                "icon": "people"
              }
            ],
            "if": "$contains(href, \".my.dashjoin.\")"
          }
        ],
        "title": "User Information"
      },
      {
        "widget": "display",
        "display": "$djVersion()",
        "title": "Software"
      },
      {
        "widget": "display",
        "display": "$djGetDatabases()",
        "title": "Database Drivers"
      },
      {
        "widget": "display",
        "display": "$djGetDrivers()",
        "title": "JDBC Drivers"
      },
      {
        "widget": "display",
        "display": "$djGetFunctions()",
        "title": "Functions"
      }
    ],
    "pageLayout": "2 column"
  }
}